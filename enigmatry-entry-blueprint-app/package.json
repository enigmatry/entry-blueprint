{
  "name": "enigmatry-entry-blueprint-app",
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "start:aspire": "run-script-os",
    "start:aspire:win32": "ng serve --port %PORT%",
    "start:aspire:default": "ng serve --port $PORT",
    "build": "ng build",
    "test": "jest --coverage=false",
    "test:ci": "jest --ci --coverage=true",
    "lint": "npm run lint:ts && npm run lint:styles",
    "lint:ts": "eslint --fix",
    "lint:styles": "stylelint --fix src/**/*.scss",
    "nswag": "node_modules\\.bin\\nswag run nswag.json",
    "codegen:run": "entry-codegen --source-assembly ../Enigmatry.Entry.Blueprint.CodeGeneration.Setup/bin/Debug/net9.0/Enigmatry.Entry.Blueprint.CodeGeneration.Setup.dll --destination-directory ./src/app/features --standalone-components true",
    "codegen:run-i18n": "entry-codegen --source-assembly ../Enigmatry.Entry.Blueprint.CodeGeneration.Setup/bin/Debug/net9.0/Enigmatry.Entry.Blueprint.CodeGeneration.Setup.dll --destination-directory ./src/app/features --enable-i18n true --standalone-components true",
    "codegen:install": "dotnet tool install enigmatry.entry.codegeneration.tools -g",
    "codegen:update": "dotnet tool update enigmatry.entry.codegeneration.tools -g",
    "i18n": "ng extract-i18n --format json --output-path src/i18n --out-file messages.en.json & sortjson src/i18n"
  },
  "private": true,
  "dependencies": {
    "@angular/cdk": "^20.2.14",
    "@angular/common": "^20.3.0",
    "@angular/compiler": "^20.3.0",
    "@angular/core": "^20.3.0",
    "@angular/forms": "^20.3.0",
    "@angular/material": "^20.2.14",
    "@angular/material-date-fns-adapter": "^20.2.14",
    "@angular/platform-browser": "^20.3.0",
    "@angular/platform-browser-dynamic": "^20.3.0",
    "@angular/router": "^20.3.0",
    "@azure/msal-browser": "4.21.0",
    "@enigmatry/entry-components": "20.3.2",
    "@enigmatry/entry-form": "20.3.2",
    "@microsoft/applicationinsights-web": "3.3.10",
    "@ngx-formly/core": "7.0.0",
    "@ngx-formly/material": "7.0.0",
    "date-fns": "^4.1.0",
    "rxjs": "^7.8.1",
    "tslib": "^2.8.1",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular/build": "^20.3.13",
    "@angular/cli": "^20.3.13",
    "@angular/compiler-cli": "^20.3.15",
    "@angular/localize": "^20.3.15",
    "@enigmatry/eslint-config": "20.3.2",
    "@enigmatry/scss-foundation": "20.3.2",
    "@enigmatry/stylelint-config": "20.3.2",
    "@types/jest": "30.0.0",
    "jest": "30.2.0",
    "jest-junit": "^16.0.0",
    "jest-environment-jsdom": "30.2.0",
    "jest-preset-angular": "15.0.3",
    "json-sort-cli": "^4.1.0",
    "nswag": "^14.6.2",
    "run-script-os": "^1.1.6",
    "typescript": "5.9.3"
  }
}
